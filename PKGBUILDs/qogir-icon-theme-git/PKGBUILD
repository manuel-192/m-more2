# Maintainer: manuel
# Original Maintainer: Aitor Alonso <contact: https://aalonso.eu>

#pkgname=qogir-icon-theme-git
pkgname=eos-qogir-icons
pkgver=6.333  # see $srcver and $commits below!
pkgrel=1
pkgdesc='A colorful design icon theme for linux desktops'
arch=('any')
url='https://github.com/vinceliuice/Qogir-icon-theme'
license=('GPL3')
depends=('hicolor-icon-theme' 'gtk-update-icon-cache')
makedepends=('git')
optdepends=()
provides=('qogir-icon-theme' eos-qogir-icons)
conflicts=('qogir-icon-theme' eos-qogir-icons)
options=('!strip')
source=('git+https://github.com/vinceliuice/Qogir-icon-theme')
sha256sums=('SKIP')

pkgver() {
  cd Qogir-icon-theme
  #local commits_head=$(git rev-list --count HEAD)
  local commits_head=333

  local srcver=6
  local commits=333

  if [ $commits_head -gt $commits ] ; then
      if false ; then
          : # commits=$commits_head
      else
          echo "Warning: $pkgname/commits $commits -> $commits_head" >&2
      fi
  fi
  echo "$srcver.$commits"
}

package() {
  cd Qogir-icon-theme
  mkdir -p "${pkgdir}/usr/share/icons"
  ./install.sh -d "${pkgdir}/usr/share/icons" --theme default
}
